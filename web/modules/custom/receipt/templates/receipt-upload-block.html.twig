<div class="receipt-upload-block">
  <div class="receipt-upload-form">
    <div class="receipt-upload-preview" id="receipt-preview"></div>
    <label for="receipt-file" class="receipt-upload-button">
      <span class="button">Wybierz lub zrób zdjęcie paragonu</span>
      <input type="file" id="receipt-file" accept="image/*" capture="environment" class="visually-hidden">
    </label>
    <button type="button" id="receipt-submit" class="receipt-submit-button" disabled>Prześlij paragon</button>
  </div>
  <div id="receipt-message" class="receipt-message"></div>
</div>
